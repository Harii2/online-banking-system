{
  "swagger": "2.0",
  "host": "127.0.0.1:8000",
  "basePath": "/api/",
  "info": {
    "version": "1.0.0",
    "title": "Fb Post",
    "description": "Fb Post"
  },
  "schemes": [
    "https",
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "securityDefinitions": {
    "oauth": {
      "tokenUrl": "http://auth.ibtspl.com/oauth2/",
      "flow": "password",
      "scopes": {
        "read": "read users",
        "write": "create users",
        "update": "update users",
        "delete": "delete users",
        "superuser": "super user permission"
      },
      "type": "oauth2"
    }
  },
  "definitions": {
    "CommonHttpExceptionResponse": {
      "type": "object",
      "properties": {
        "response": {
          "type": "string"
        },
        "http_status_code": {
          "type": "integer"
        }
      },
      "required": [
        "response",
        "http_status_code"
      ]
    }
  },
  "parameters": {},
  "responses": {
    "CreateBankAccountBadRequestResponse": {
      "description": "Create Bank Account Bad Request",
      "schema": {
        "allOf": [
        {
          "$ref": "#/definitions/CommonHttpExceptionResponse"
        },
        {
          "type": "object",
          "properties": {
            "res_status": {
              "type": "string",
              "enum": [
                "INVALID_USER_NAME",
                "INVALID_AGE",
                "INVALID_MOBILE_NUMBER"
              ]
            }
          }
        }
      ]
      }
    },
    "CreateBankAccountNotFoundResponse":  {
      "description": "Create Bank Account Not Found Response",
      "schema": {
        "allOf": [
        {
          "$ref": "#/definitions/CommonHttpExceptionResponse"
        },
        {
          "type": "object",
          "properties": {
            "res_status": {
              "type": "string",
              "enum": [
                "BANK_NOT_EXISTS"
              ]
            }
          }
        }
      ]
      }
    },
    "CreateBankAccountValidResponse": {
      "description": "SUCCESSFULLY CREATED",
            "schema": {
              "type": "object",
              "properties": {
                "account_number": {
                  "type": "integer"
                }
              },
              "required": [
                "account_number"
              ]
            }
    },
    "CreateBankBadRequestResponse": {
      "description": "Create Bank Bad Request",
      "schema": {
        "allOf": [
        {
          "$ref": "#/definitions/CommonHttpExceptionResponse"
        },
        {
          "type": "object",
          "properties": {
            "res_status": {
              "type": "string",
              "enum": [
                "INVALID_IFSC_CODE",
                "INVALID_MANAGER_EMAIL"
              ]
            }
          }
        }
      ]
      }
    },
    "CreateBankValidResponse": {
      "description": "CREATED SUCCESSFULLY",
            "schema": {
              "type": "object",
              "properties": {
                "bank_id": {
                  "type": "integer"
                },
                "manager_id": {
                  "type": "integer"
                }
              },
              "required": [
                "bank_id"
              ]
            }
    },
    "GetAccountBalanceValidResponse": {
      "description": "Getting users bank balance",
            "schema": {
              "type": "object",
              "properties": {
                "balance": {
                  "type": "string"
                }
              },
              "required": [
                "balance"
              ]
            }
    },
    "GetAccountBadRequestResponse": {
      "description": "Get Account Balance Bad Response",
      "schema": {
        "allOf": [
        {
          "$ref": "#/definitions/CommonHttpExceptionResponse"
        },
        {
          "type": "object",
          "properties": {
            "res_status": {
              "type": "string",
              "enum": [
                "INVALID_ACCOUNT_ID"
              ]
            }
          }
        }
      ]
      }
    },
    "MakeTransactionBadRequestResponse": {
      "description": "Get Account Balance Bad Response",
      "schema": {
        "allOf": [
        {
          "$ref": "#/definitions/CommonHttpExceptionResponse"
        },
        {
          "type": "object",
          "properties": {
            "res_status": {
              "type": "string",
              "enum": [
                "INVALID_ACCOUNT_ID",
                "INVALID_AMOUNT",
                "INSUFFICIENT_BALANCE"
              ]
            }
          }
        }
      ]
      }
    },
    "MakeTransactionValidResponse": {
      "description": "SUCCESSFULLY MADE CREATED",
      "schema": {
              "type": "object",
              "properties": {
                "transaction_id": {
                  "type": "integer"
                },
                "amount_paid": {
                  "type": "integer"
                },
                "message": {
                  "type": "string"
                }
              }
      }
    },
    "GetTransactionHistoryValidResponse": {
      "description": "Successfully Retrieved",
       "schema": {
              "type": "object",
         "properties": {
           "transactions": {
             "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "transaction_id": {
                    "type": "integer"
                  },
                  "transaction_type": {
                    "type": "string"
                  },
                  "amount": {
                    "type": "integer"
                  },
                  "date_time": {
                    "type": "string"
                  },
                  "to_account_id": {
                    "type": "string"
                  }
                }
              }
           }
         }
            }
    },
    "GetTransactionHistoryBadRequestResponse": {
      "description": "Get Transaction History Bad Response",
      "schema": {
        "allOf": [
        {
          "$ref": "#/definitions/CommonHttpExceptionResponse"
        },
        {
          "type": "object",
          "properties": {
            "res_status": {
              "type": "string",
              "enum": [
                "INVALID_ACCOUNT_ID",
                "INVALID_AMOUNT"
              ]
            }
          }
        }
      ]
      }
    }
  },
  "paths": {
    "/bank/": {
      "post": {
        "description": "Creating a new Bank",
        "operationId": "create_bank",
        "parameters": [
          {
            "name": "requestBody",
            "in": "body",
            "description": "The request body for creating a bank entity",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "bank_name": {
                  "type": "string"
                },
                "ifsc_code": {
                  "type": "string"
                },
                "bank_manager_email": {
                  "type": "string"
                },
                "branch": {
                  "type": "string"
                }
              },
              "required": [
                "bank_name",
                "ifsc_code",
                "bank_manager_email",
                "branch"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "$ref": "#/responses/CreateBankValidResponse"
          },
          "400": {
            "$ref": "#/responses/CreateBankBadRequestResponse"
          }
        }
      }
    },
    "/{bank_id}/account/create/": {
      "post": {
        "operationId": "create_account",
        "description": "creating an account in the given bank name",
        "parameters": [
          {
            "name": "bank_id",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "name": "requestBody",
            "in": "body",
            "description": "The request body for creating a bank entity",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "age": {
                  "type": "integer"
                },
                "mobile_number": {
                  "type" : "string"
                }
              },
              "required": [
                "name",
                "age",
                "mobile_number"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "$ref": "#/responses/CreateBankAccountValidResponse"
          },
          "400": {
            "$ref": "#/responses/CreateBankAccountBadRequestResponse"
          },
          "404": {
            "$ref": "#/responses/CreateBankAccountNotFoundResponse"
          }
        }
      }
    },
    "/account/{account_id}/": {
      "get": {
        "description": "Getting user account balance",
        "operationId": "get_account_balance",
        "parameters": [
          {
            "name": "account_id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/GetAccountBalanceValidResponse"
          },
          "400": {
            "$ref": "#/responses/GetAccountBadRequestResponse"
          }
        }
      }
    },
    "/bank/make_transaction/": {
      "post": {
        "operationId": "make_transaction",
        "description": "Making transaction at bank level",
        "parameters": [
          {
            "name": "requestBody",
            "in": "body",
            "description": "The request body for making a transaction",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "from_account_number": {
                  "type": "integer"
                },
                "to_account_number": {
                  "type": "integer"
                },
                "amount": {
                  "type": "integer"
                },
                "transaction_type": {
                  "type": "string"
                }
              },
              "required": [
                "from_account_number",
                "to_account_number",
                "amount"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "$ref": "#/responses/MakeTransactionValidResponse"
          },
          "400": {
            "$ref": "#/responses/MakeTransactionBadRequestResponse"
          }
        }
      }
    },
    "/account/{account_id}/transaction_history/": {
      "get": {
        "operationId": "get_all_transactions",
        "description": "Getting All Transaction of given account id",
        "parameters": [
          {
            "name": "account_id",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "name": "limit",
            "in": "query",
            "required": true,
            "type": "integer"
          },
          {
            "name": "offset",
            "in": "query",
            "required": true,
            "type": "integer"
          },
          {
            "name": "sortBy",
            "in": "query",
            "required": true,
            "type": "string"
          },
          {
            "name": "type",
            "in": "query",
            "required": true,
            "type": "string",
            "enum": [
              "credit",
              "debit"
            ]
          }
        ],
        "responses": {
          "201": {
            "$ref": "#/responses/GetTransactionHistoryValidResponse"
          },
          "400": {
           "$ref": "#/responses/GetTransactionHistoryBadRequestResponse"
          }
        }
      }
    }
  }
}