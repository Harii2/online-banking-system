{
  "swagger": "2.0",
  "host": "127.0.0.1:8000",
  "basePath": "/api/",
  "info": {
    "version": "1.0.0",
    "title": "Fb Post",
    "description": "Fb Post"
  },
  "schemes": [
    "https",
    "http"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "securityDefinitions": {
    "oauth": {
      "tokenUrl": "http://auth.ibtspl.com/oauth2/",
      "flow": "password",
      "scopes": {
        "read": "read users",
        "write": "create users",
        "update": "update users",
        "delete": "delete users",
        "superuser": "super user permission"
      },
      "type": "oauth2"
    }
  },
  "definitions": {},
  "parameters": {},
  "responses": {},
  "paths": {
    "/bank/": {
      "post": {
        "description": "Creating a new Bank",
        "operationId": "create_bank",
        "parameters": [
          {
            "name": "requestBody",
            "in": "body",
            "description": "The request body for creating a bank entity",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "bank_name": {
                  "type": "string"
                },
                "ifsc_code": {
                  "type": "string"
                },
                "bank_manager_email": {
                  "type": "string"
                },
                "branch": {
                  "type": "string"
                }
              },
              "required": [
                "bank_name",
                "ifsc_code",
                "bank_manager_email",
                "branch"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "CREATED SUCCESSFULLY",
            "schema": {
              "type": "object",
              "properties": {
                "bank_id": {
                  "type": "integer"
                },
                "manager_id": {
                  "type": "integer"
                }
              },
              "required": [
                "bank_id"
              ]
            }
          },
          "401": {
            "description": "Invalid Details",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              },
              "required": [
                "message"
              ]
            }
          }
        }
      }
    },
    "/{bank_id}/account/create/": {
      "post": {
        "operationId": "create_account",
        "description": "creating an account in the given bank name",
        "parameters": [
          {
            "name": "bank_id",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "name": "requestBody",
            "in": "body",
            "description": "The request body for creating a bank entity",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "age": {
                  "type": "integer"
                },
                "mobile_number": {
                  "type" : "string"
                }
              },
              "required": [
                "name",
                "age",
                "mobile_number"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "SUCCESSFULLY CREATED",
            "schema": {
              "type": "object",
              "properties": {
                "account_number": {
                  "type": "integer"
                }
              },
              "required": [
                "account_number"
              ]
            }
          },
          "401": {
            "description": "Invalid Details",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              },
              "required": [
                "message"
              ]
            }
          }
        }
      }
    },
    "/account/{account_id}/": {
      "get": {
        "description": "Getting user account balance",
        "operationId": "get_account_balance",
        "parameters": [
          {
            "name": "account_id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Getting users bank balance",
            "schema": {
              "type": "object",
              "properties": {
                "balance": {
                  "type": "string"
                }
              },
              "required": [
                "balance"
              ]
            }
          },
          "401": {
            "description": "Invalid Details",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              },
              "required": [
                "message"
              ]
            }
          }
        }
      }
    },
    "/bank/{bank_id}/make_transaction/": {
      "post": {
        "operationId": "make_transaction",
        "description": "Making transaction at bank level",
        "parameters": [
          {
            "name": "bank_id",
            "in": "path",
            "required": true,
            "description": "bank_name",
            "type": "integer"
          },
          {
            "name": "type",
            "in": "query",
            "required": true,
            "description": "EIther credit or Debit",
            "type": "string",
            "enum": [
              "Credit",
              "Debit"
            ]
          },
          {
            "name": "requestBody",
            "in": "body",
            "description": "The request body for making a transaction",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "from_account_number": {
                  "type": "integer"
                },
                "to_account_number": {
                  "type": "integer"
                },
                "amount": {
                  "type": "integer"
                }
              },
              "required": [
                "from_account_number",
                "to_account_number",
                "amount"
              ]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "SUCCESFULLY MADE TRANSACTION",
            "schema": {
              "type": "object",
              "properties": {
                "transaction_id": {
                  "type": "integer"
                },
                "amount_paid": {
                  "type": "integer"
                },
                "message": {
                  "type": "string"
                }
              }
            }
          },
          "401": {
            "description": "Invalid Details",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              },
              "required": [
                "message"
              ]
            }
          }
        }
      }
    },
    "/account/{account_id}/transaction_history/": {
      "get": {
        "operationId": "get_all_transactions",
        "description": "Getting-All Transaction of given account id",
        "parameters": [
          {
            "name": "account_id",
            "in": "path",
            "required": true,
            "type": "integer"
          },
          {
            "name": "limit",
            "in": "query",
            "required": true,
            "type": "integer"
          },
          {
            "name": "offset",
            "in": "query",
            "required": true,
            "type": "integer"
          },
          {
            "name": "sortBy",
            "in": "query",
            "required": true,
            "type": "string"
          },
          {
            "name": "type",
            "in": "query",
            "required": true,
            "type": "string",
            "enum": [
              "credit",
              "debit"
            ]
          }
        ],
        "responses": {
          "200": {
            "description": "All Transaction by given fields",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "transaction_id": {
                    "type": "integer"
                  },
                  "transaction_type": {
                    "type": "integer"
                  },
                  "amount": {
                    "type": "integer"
                  },
                  "date_time": {
                    "type": "string"
                  },
                  "to_account_id": {
                    "type": "string"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid Details",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              },
              "required": [
                "message"
              ]
            }
          }
        }
      }
    }
  }
}